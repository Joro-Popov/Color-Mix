@model EmailViewModel

<div id="all">
    <div id="content">
        <div class="container mt-4">
            @if (this.TempData.Count > 0)
            {
                <div class="alert alert-success custom-alert" role="alert">
                    @this.TempData["SendMessage"]
                </div>
            }
            <div class="row">
                <div class="col-lg-5">
                    <div id="contact" class="box">
                        <h2>Пишете ни</h2>
                        <form asp-controller="Home" , asp-action="Contacts" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Title">Заглавие</label>
                                        <input asp-for="Title" type="text" class="form-control" placeholder="Заглавие">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Title">E-mail адрес</label>
                                        <input asp-for="EmailAddress" type="email" class="form-control" placeholder="E-mail адрес">
                                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Message">Съобщение</label>
                                        <textarea asp-for="Message" type="text" class="form-control" style="height: 120px" placeholder="Съдържание"></textarea>
                                        <span asp-validation-for="Message" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i>Изпрати</button>
                                </div>
                            </div>
                            <!-- /.row-->
                        </form>
                    </div>
                    <!-- /.col-md-9-->
                </div>
                <div class="col-lg-7">
                    <div id="contact" class="box">
                        <h1>Контакти с нас</h1>
                        <p class="lead">С удоволствие ще отговорим на всички Ваши запитвания !</p>
                        <hr>
                        <div class="row">
                            <div class="col-md-4">
                                <h3><i class="fa fa-map-marker mr-1"></i>Адрес</h3>
                                <p>Стара Загора<br>бул.Цар Симеон Велики 18<br>Под Новия парк<br><strong>България</strong></p>
                                <div id="basket-overview" class="d-lg-block">
                                    <a target="_blank" href="https://www.google.com/maps/place/%D0%9C%D0%B0%D0%B3%D0%B0%D0%B7%D0%B8%D0%BD+Color+Mix-+%D0%94%D1%80%D0%B5%D1%85%D0%B8+%D0%92%D1%82%D0%BE%D1%80%D0%B0+%D0%A3%D0%BF%D0%BE%D1%82%D1%80%D0%B5%D0%B1%D0%B0/@@42.4212517,25.6133509,18z/data=!4m13!1m7!3m6!1s0x40a8698f6d5845f7:0xd09830091b8e863c!2z0LHRg9C7LiDigJ7QptCw0YAg0KHQuNC80LXQvtC9INCS0LXQu9C40LrQuOKAnCAxOCwgNjAwMyDQmtCw0LfQsNC90YHQutC4LCDQodGC0LDRgNCwINCX0LDQs9C-0YDQsA!3b1!8m2!3d42.4211276!4d25.6136954!3m4!1s0x0:0x50cc2b90cceaaceb!8m2!3d42.4213892!4d25.6135729?hl=bg" class="btn btn-primary navbar-btn">
                                        <i class="fas fa-map-marked-alt mr-1"></i><span>Виж Google Карта</span>
                                    </a>
                                </div>
                            </div>
                            <!-- /.col-sm-4-->
                            <div class="col-md-4">
                                <h3><i class="fa fa-phone"></i> Телефон</h3>
                                <p class="text-muted"></p>
                                <p><strong>+33 555 444 333</strong></p>
                            </div>
                            <!-- /.col-sm-4-->
                            <div class="col-md-4">
                                <h3><i class="fa fa-envelope"></i> E-mail</h3>
                                <strong><a href="mailto:">info@fakeemail.com</a></strong>
                            </div>
                            <!-- /.col-sm-4-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        window.setTimeout(function () {

            $(".custom-alert").slideUp(500, function () {
                $(this).remove();
            });
        }, 3000);
    </script>
}