@model OrdersViewModel

<div id="all">
    <div id="content">
        <div class="container mt-3">
            <div class="row">
                <div class="col-lg-3">
                    <partial name="_CustomerMenuPartial" />
                    <vc:Order-Summary></vc:Order-Summary>
                </div>
                <div id="checkout" class="col-lg-9">
                    <div class="box">
                        <form asp-controller="Orders" asp-action="OrderReview" method="post">
                            <h1>Адрес за доставка</h1>
                            <p class="text-muted">
                                Можете да коригирате данните за доставка от <a asp-controller="Users" asp-action="MyPersonalData">тук</a>.
                            </p>
                            <div class="nav flex-column flex-md-row nav-pills text-center">
                                <a href="checkout1.html" class="nav-link flex-sm-fill text-sm-center active"> <i class="fa fa-map-marker"> </i>Адрес</a>
                                <a href="#" class="nav-link flex-sm-fill text-sm-center disabled"> <i class="fa fa-eye"> </i>Преглед на поръчката</a>
                            </div>
                            <div class="content py-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="FirstName">Име<span class="text-danger">*</span></label>
                                            <input asp-for="FirstName" value="@Model.FirstName" class="form-control" readonly>
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="LastName">Фамилия<span class="text-danger">*</span></label>
                                            <input asp-for="LastName" value="@Model.LastName" class="form-control" readonly>
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="AddressCountry">Държава<span class="text-danger">*</span></label>
                                            <input asp-for="AddressCountry" value="@Model.AddressCountry" class="form-control" readonly>
                                            <span asp-validation-for="AddressCountry" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="AddressCity">Град<span class="text-danger">*</span></label>
                                            <input asp-for="AddressCity" value="@Model.AddressCity" class="form-control" readonly>
                                            <span asp-validation-for="AddressCity" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="AddressZipCode">Пощенски код<span class="text-danger">*</span></label>
                                            <input asp-for="AddressZipCode" type="number" value="@Model.AddressZipCode" class="form-control" readonly>
                                            <span asp-validation-for="AddressZipCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="PhoneNumber">Телефонен номер<span class="text-danger">*</span></label>
                                            <input asp-for="PhoneNumber" value="@Model.PhoneNumber" class="form-control" readonly>
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="AddressStreet">Улица<span class="text-danger">*</span></label>
                                            <input asp-for="AddressStreet" value="@Model.AddressStreet" class="form-control" readonly>
                                            <span asp-validation-for="AddressStreet" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Email">E-mail Адрес<span class="text-danger">*</span></label>
                                            <input asp-for="Email" value="@Model.Email" class="form-control" readonly>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row-->
                            </div>
                            <!-- /.content-->
                            <div class="box-footer d-flex justify-content-between">
                                <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fa fa-chevron-left"></i>Количка
                                </a>
                                <button type="submit" class="btn btn-primary">Напред<i class="fa fa-chevron-right"></i></button>
                            </div>
                        </form>
                    </div>
                    <!-- /.box-->
                </div>
                <!-- /.col-lg-9-->
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}