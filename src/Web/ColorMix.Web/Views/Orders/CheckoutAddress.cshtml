@model OrdersViewModel

<div id="all">
    <div id="content">
        <div class="container mt-3">
            <div class="row">
                <div id="checkout" class="col-lg-9">
                    <div class="box">
                        <form asp-controller="Orders" asp-action="OrderReview" method="post">
                            <h1>Адрес за доставка</h1>
                            <p class="text-muted">
                                Можете да коригирате посочените адресни данни, ако искате да изпратите пакет за подарък, но без да е в него фактурата.
                                В този случай, посочения адрес ще бъде използван за адрес за доставка а посочения адрес при регистрация, ще бъде
                                използван за адрес за фактуриране.
                                Тогава пакетът се изпраща на адреса за доставка, а ние ще изпратим фактурата на адреса за фактуриране.
                                Ако не сте посочили адрес при регистрация, пакетът и фактурата ще бъдат доставени на един и същ адрес.
                                Можете да коригирате адреса за фактуриране от <a asp-controller="Users" asp-action="MyPersonalData">тук</a>.
                            </p>
                            <div class="nav flex-column flex-md-row nav-pills text-center">
                                <a href="checkout1.html" class="nav-link flex-sm-fill text-sm-center active"> <i class="fa fa-map-marker"> </i>Адрес</a>
                                <a href="#" class="nav-link flex-sm-fill text-sm-center disabled"> <i class="fa fa-eye"> </i>Преглед на поръчката</a>
                            </div>
                            <div class="content py-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="FirstName">Име<span class="text-danger">*</span></label>
                                            <input asp-for="FirstName" value="@Model.FirstName" class="form-control">
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="LastName">Фамилия<span class="text-danger">*</span></label>
                                            <input asp-for="LastName" value="@Model.LastName" class="form-control">
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="AddressCountry">Държава<span class="text-danger">*</span></label>
                                            <input asp-for="AddressCountry" value="@Model.AddressCountry" class="form-control">
                                            <span asp-validation-for="AddressCountry" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="AddressCity">Град<span class="text-danger">*</span></label>
                                            <input asp-for="AddressCity" value="@Model.AddressCity" class="form-control">
                                            <span asp-validation-for="AddressCity" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="AddressZipCode">Пощенски код<span class="text-danger">*</span></label>
                                            <input asp-for="AddressZipCode" type="number" value="@Model.AddressZipCode" class="form-control">
                                            <span asp-validation-for="AddressZipCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="PhoneNumber">Телефонен номер<span class="text-danger">*</span></label>
                                            <input asp-for="PhoneNumber" value="@Model.PhoneNumber" class="form-control">
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="AddressStreet">Улица<span class="text-danger">*</span></label>
                                            <input asp-for="AddressStreet" value="@Model.AddressStreet" class="form-control">
                                            <span asp-validation-for="AddressStreet" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Email">E-mail Адрес<span class="text-danger">*</span></label>
                                            <input asp-for="Email" value="@Model.Email" class="form-control">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row-->
                            </div>
                            <!-- /.content-->
                            <div class="box-footer d-flex justify-content-between">
                                <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fa fa-chevron-left"></i>Количка
                                </a>
                                <button type="submit" class="btn btn-primary">Напред<i class="fa fa-chevron-right"></i></button>
                            </div>
                        </form>
                    </div>
                    <!-- /.box-->
                </div>
                <!-- /.col-lg-9-->
                <div class="col-lg-3">
                    <div id="order-summary" class="card">
                        <div class="card-header">
                            <h3 class="mt-4 mb-4">Order summary</h3>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Shipping and additional costs are calculated based on the values you have entered.</p>
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <td>Order subtotal</td>
                                        <th>$446.00</th>
                                    </tr>
                                    <tr>
                                        <td>Shipping and handling</td>
                                        <th>$10.00</th>
                                    </tr>
                                    <tr>
                                        <td>Tax</td>
                                        <th>$0.00</th>
                                    </tr>
                                    <tr class="total">
                                        <td>Total</td>
                                        <th>$456.00</th>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}