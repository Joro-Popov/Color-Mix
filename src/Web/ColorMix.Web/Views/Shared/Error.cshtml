@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div id="all">
    <div id="content">
        <div class="container mt-3">
            <div class="row">
                <div class="col-lg-12">
                    <div id="error-page" class="row">
                        <div class="col-md-6 mx-auto">
                            <div class="box text-center py-5">
                                <p class="text-center"><img src="/img/logo.png" alt="Obaju template"></p>
                                <h3>@Model.Message</h3>
                                <p class="buttons"><a asp-controller="Home" asp-action="Index" class="btn btn-primary"><i class="fa fa-home"></i> Начало</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
