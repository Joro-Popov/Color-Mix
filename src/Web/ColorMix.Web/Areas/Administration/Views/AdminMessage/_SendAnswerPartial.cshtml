@model SendMessageViewModel

<form asp-area="Administration" asp-controller="AdminMessage" asp-action="SendAnswer">
    <div class="form-row mb-2">
        <div class="col">
            <label asp-for="EmailAddress">E-mail адрес на получателя<span class="text-danger">*</span></label>
            <input asp-for="EmailAddress" class="form-control" value="@Model.EmailAddress">
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row mb-2">
        <div class="col">
            <label asp-for="Subject">Тема<span class="text-danger">*</span></label>
            <input asp-for="Subject" class="form-control" placeholder="">
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label asp-for="Answer">Съобщение</label>
            <textarea asp-for="Answer" type="text" class="form-control" style="height: 120px"></textarea>
            <span asp-validation-for="Answer" class="text-danger"></span>
        </div>
    </div>
    <input asp-for="Id" type="hidden" value="@Model.Id">
    <div class="text-center mt-3">
        <button type="submit" class="btn btn-primary"><i class="fa fa-user-md"></i>Изпрати</button>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}