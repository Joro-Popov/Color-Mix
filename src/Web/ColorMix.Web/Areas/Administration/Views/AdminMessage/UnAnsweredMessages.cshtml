@model IEnumerable<MessageViewModel>
<div id="all">
    <div id="content">
        <div class="container mt-3 mb-3">
            <div class="row">
                <div class="col-lg-3">
                    <partial name="_AdminMenuPartial" />
                </div>
                <div id="customer-orders" class="col-lg-9">
                    <div class="box">
                        <h1>Входящи съобщения</h1>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Изпратил</th>
                                        <th>Заглавие</th>
                                        <th>Дата</th>
                                        <th>Съдържание</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var message in Model)
                                    {
                                    <tr>
                                        <th>@message.EmailAddress</th>
                                        <th>@message.Title</th>
                                        <th>@message.SendOn</th>
                                        <td>@message.Content</td>
                                        <td><a asp-controller="Orders" asp-action="Details" asp-route-id="@message.Id" class="btn btn-primary btn-sm">Детайли</a></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>