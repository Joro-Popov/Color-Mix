@model IEnumerable<UnavailableProductViewModel>

<div id="all">
    <div id="content">
        <div class="container mt-3">
            <div class="row">
                <div class="col-lg-3">
                    <partial name="~/Areas/Administration/Views/Shared/_AdminMenuPartial.cshtml" />
                </div>
                <div id="basket" class="col-lg-9">
                    <div class="box">
                        <h1>Неактивни Продукти</h1>
                        <p class="text-muted">@Model.Count() продукт(а) са неактивни.</p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Продукт</th>
                                        <th>Наименование</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                    <tr>
                                        <td>
                                            <img src="@product.ImageUrl" alt="White Blouse Armani">
                                        </td>
                                        <td>
                                            @product.Name
                                        </td>
                                        <td>
                                            <a asp-area="Administration" asp-controller="AdminProducts" asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-primary btn-sm">
                                                <i class="far fa-edit"></i> Редактирай
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-area="Administration" asp-controller="AdminProducts" asp-action="RestoreProduct" asp-route-id="@product.Id" class="btn btn-primary btn-sm">
                                                <i class="fas fa-undo"></i> Възобнови
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.box-->
                </div>
                <!-- /.col-lg-9-->
                <!-- /.col-md-3-->
            </div>
        </div>
    </div>
</div>