@page
@model ExternalLoginModel

<div class="row justify-content-center">
    <div id="all">
        <div id="content">
            <div class="container mt-4">
                <div class="row justify-content-center">
                    <div class="col-lg-9">
                        <div class="box">
                            <h2>Регистрация</h2>
                            <h4>Свържете @Model.LoginProvider профила си.</h4>
                            <hr />

                            <p class="text-info">
                                Успешно влязохте със <strong>@Model.LoginProvider</strong> профила си.
                                Моля, потвърдете данните по-долу за да продължите!
                            </p>
                            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <hr />
                                <div class="form-row">
                                    <div class="col">
                                        <label asp-for="Input.Email">E-mail адрес<span class="text-danger">*</span></label>
                                        <input asp-for="Input.Email" type="email" class="form-control" placeholder="E-mail адрес">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="text-center mt-3">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-user-md"></i>Продължи</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

